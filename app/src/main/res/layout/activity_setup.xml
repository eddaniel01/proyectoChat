<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SetupActivity">

    <include
        android:id="@+id/toolbar_setup"
        layout="@layout/toolbar_principal"></include>

    <EditText
        android:id="@+id/nombre_setup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar_setup"
        android:padding="10dp"
        android:hint="Nombre"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"/>

    <EditText
        android:id="@+id/apellido_setup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nombre_setup"
        android:padding="10dp"
        android:hint="Apellido"
        android:layout_marginTop="35dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"/>

    <EditText
        android:id="@+id/ciudad_setup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/apellido_setup"
        android:padding="10dp"
        android:hint="Ciudad"
        android:layout_marginTop="35dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"/>

    <EditText
        android:id="@+id/genero_setup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ciudad_setup"
        android:padding="10dp"
        android:hint="Genero"
        android:layout_marginTop="35dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"/>


    <Button
        android:id="@+id/boton_setup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/genero_setup"
        android:padding="10dp"
        android:text="Guardar Informacion"
        android:background="@color/black"
        android:textColor="#ffff"
        android:layout_marginTop="35dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imagen_setup"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_below="@id/boton_setup"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/chaticc"
        app:civ_border_color="@color/black"
        app:civ_border_width="3dp"/>





</RelativeLayout>